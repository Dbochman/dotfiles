{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/no-rm.mjs"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/continuous-learning-activator.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'p=$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1); [ -n \"$p\" ] && [ -f \"${p}dist/index.js\" ] && node \"${p}dist/index.js\"'"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "claude-hud@claude-hud": true,
    "claude-delegator@jarrodwatts-claude-delegator": true
  },
  "alwaysThinkingEnabled": false,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
